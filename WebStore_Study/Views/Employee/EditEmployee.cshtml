@model EmployeesViewModel

@{
    ViewBag.Title = $"Редактирование сотрудника: {Model.LastName} {Model.FirstName}";
}

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h2>@ViewBag.Title</h2>
            <form asp-action="EndEditEmployee" method="post">
                
                <div asp-validation-summary="ModelOnly"></div>

                <input type="hidden" asp-for="Id" value=@Model.Id><br>
                
                <div class="form-group">
                    <label>Имя:</label><br>
                    <input type="text" asp-for="FirstName" value=@Model.FirstName class="form-control"><span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Фамилия:</label><br>
                    <input type="text" asp-for="LastName" value=@Model.LastName class="form-control"><span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Отчество:</label><br>
                    <input type="text" asp-for="Patronymic" value=@Model.Patronymic class="form-control"><span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Возраст:</label><br>
                    <input type="number" asp-for="Age" value=@Model.Age class="form-control"><span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input style="margin:10px 0px" class="btn btn-info" type="submit" value="Сохранить">
                    <input style="margin: 10px 10px" class="btn btn-default" type="reset" value="Сбросить">
                    <a style="margin: 10px 0px" class="btn btn-danger" asp-action="DeleteEmployee" asp-route-id="@Model.Id">Удалить</a>
                </div>






            </form>
        </div>

    </div>


</div>