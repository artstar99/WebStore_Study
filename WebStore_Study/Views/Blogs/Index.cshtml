@model BlogsViewModel


<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="../Shared/Partial/_LeftSideBar" />
            </div>
            <div class="col-sm-9">
                <div class="blog-post-area">
                    <h2 class="title text-center">Latest From our Blog</h2>

                    @for (int i = 0; i < Model.Blogs.Count; i++)
                    {
                        @* начало блога *@
                        <div class="single-blog-post">
                            <h3>@Model.Blogs[i].Heading</h3>
                            <div class="post-meta">
                                <ul>
                                    <li><i class="fa fa-user"></i> @Model.Blogs[i].Author</li>
                                    <li><i class="fa fa-clock-o"></i>@Model.Blogs[i].CreationTime.ToShortTimeString() </li>
                                    <li><i class="fa fa-calendar"></i> @Model.Blogs[i].CreationTime.ToLongDateString()</li>
                                </ul>
                                <span>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-o"></i>
                                </span>
                            </div>
                            <a href="">
                                <img src=@Model.Blogs[i].Image.Path alt="">
                            </a>
                            <p>@Model.Blogs[i].MainText</p>
                            <a class="btn btn-primary" href="">Read More</a>
                        </div>
                        @* конец блога  *@
                    }

