@model IEnumerable<BrandViewModel>
    <div class="brands_products">
        <h2>Brands</h2>
        <div class="brands-name">
            <ul class="nav nav-pills nav-stacked">
                @foreach (var brand in Model.Where(b=>b.ProductsCount>0))
                {
                    <li @(brand.Id==ViewBag.BrandId? "class=active":null) ><a asp-controller="Catalog" asp-action="Shop" asp-route-brandId="@brand.Id">
                        <span class="pull-right">(@brand.ProductsCount)</span>@brand.Name
                    </a></li>
                }

            </ul>
        </div>
    </div>
