@model IEnumerable<UserOrderViewModel>
@{
    Layout = "_UserProfileLayout";
    ViewData["Title"] = "Заказы";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <thead>
    <tr>
        <th>№</th>
        <th>Имя</th>
        <th>Адрес</th>
        <th>Сумма</th>
    </tr>
    </thead>
    <tbody>
    @{ int i = 1;}
    @foreach (var order in Model)
    {
        <tr>
            <td>@(i++)</td>
            <td>@order.Name</td>
            <td>@order.Address</td>
            <td>@order.TotalSum</td>

        </tr>
    }

    </tbody>
</table>
