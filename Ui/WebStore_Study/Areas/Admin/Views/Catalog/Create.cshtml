@using System.Linq
@model ProductCreateViewModel

@{
    ViewData["Title"] = "Add New Product";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>

    <h4>Product</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="EndCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             ц   <div class="form-group">
                    <label class="control-label">Изображение</label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Product.ImageUrl" type="hidden" class="form-control" />
                </div>

                <div class="form-group">
                    <input asp-for="Product.Order" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Секция</label>
                    <select asp-for="Product.SectionId"
                            asp-items="@Model.Sections.Select(s => new SelectListItem() {Value = s.Id.ToString(), Text = s.Name})"
                            class="form-control">
                        <option>Выбрать секцию</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label">Бренд</label>
                    <select asp-for="Product.BrandId"
                            asp-items="@Model.Brands.Select(b => new SelectListItem() {Value = b.Id.ToString(), Text = b.Name})"
                            class="form-control">
                        <option>Выбрать бренд</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Name" class="control-label"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" asp-action="EndCreate" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
